doctype html
include ../../static/assets/lib/ldui/pug/ldui.pug
html
  head
    +css("https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css")
    +css("/assets/lib/ldui/ldui.min.css")
  body
    .p-4.w-1024.rwd.mx-auto.my-4
      p This example demonstrates partial document editing.
      .row
        +scope("ctrla").col-md
          div {ctrla: { ... }}
          textarea.form-control.form-control-lg.mb-2(ld="textarea",rows="10",readonly)
          .d-flex.justify-content-between
            .btn.btn-lg.btn-primary(ld="add") Add
        +scope("ctrlb").col-md
          div {ctrlb: { ... }}
          textarea.form-control.form-control-lg.mb-2(ld="textarea",rows="10",readonly)
          .d-flex.justify-content-between
            .btn.btn-lg.btn-primary(ld="add") Add
            .btn.btn-lg.btn-primary(ld="disconnect") Disconnect

    .ldcv(ld="ldcv",data-lock="true"): .base.w-480: .inner.card: .card-body.text-center.p-4: .py-4
      h3 Disconnected.
      br
      .btn.btn-outline-primary.ld-ext-right(ld="reconnect") Reconnect #[span.ld.ld-spinner.ld-spin]
    +script("/assets/lib/ldui/ldui.min.js")
    +script("/assets/lib/sharedb-wrapper/sharedb.min.js")
    +script("/assets/lib/sharedb-wrapper/json-ot-diff.min.js")
